{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./webAO",
    "esModuleInterop": true,
    "allowJs": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "ES2021.String"],
    "skipLibCheck": true,
    "noEmit": false,

    "resolveJsonModule": true,

    /* Makes 'value could be null' errors to not be errors */
    "strictNullChecks": false,
    "downlevelIteration": true,

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./webAO/**/*.ts", "./webAO/viewport/viewport.ts"]
}
